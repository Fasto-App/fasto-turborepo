{
	"name": "fastoapp",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"husky": {
		"hooks": {
			"pre-commit": "sh husky/pre-commit",
			"pre-push": "yarn test"
		}
	},
	"scripts": {
		"postinstall": "husky install",
		"dev": "turbo run dev --parallel",
		"format": "turbo run format --parallel",
		"lint": "turbo run lint",
		"ft": "prettier --write \"**/*.{ts,tsx,md}\"",
		"build:client": "turbo run build --filter=client",
		"build:api": "turbo run build --filter=server",
		"start:client": "turbo run start --filter=client",
		"start:server": "turbo run dev --filter=server",
		"prod-frontend": "yarn run build:client",
		"prod-backend": "yarn run build:api",
		"start": "cd apps/server && yarn run start",
		"deploy": "git add . && git commit -m Heroku && git push heroku main",
		"deploy:client": "heroku git:remote -a opentab-frontend && yarn run deploy",
		"deploy:api": "heroku git:remote -a opentab-backend && yarn run deploy",
		"generate:client": "cd apps/client && yarn run generate ",
		"generate:server": "cd apps/server && yarn run generate",
		"storybook": "cd apps/client && yarn run storybook",
		"test:gui": "cd apps/client && yarn cypress:open",
		"test": "cd apps/client && yarn cypress:run"
	},
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"eslint-config-custom": "*",
		"husky": "^8.0.3",
		"prettier": "latest",
		"turbo": "latest"
	},
	"engines": {
		"yarn": "1.22.19",
		"node": "18.x.x"
	},
	"dependencies": {
		"graphql": "^16.6.0",
		"graphql-ws": "^5.12.1",
		"jose": "^4.13.1",
		"zod": "^3.21.4"
	},
	"packageManager": "yarn@1.22.17"
}

{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".next/**"]
		},
		"start": {
			"dependsOn": ["^build"]
		},
		"start:app": {},
		"lint": {
			"outputs": []
		},
		"dev": {
			"cache": false
		}
	},
	"globalDependencies": [".env"],
	"globalEnv": [
		"API_KEY",
		"ENVIRONMENT",
		"TOKEN_SECRET",
		"DB_NAME",
		"CLUSTER_PASSWORD",
		"AWS_BUCKET_NAME",
		"AWS_BUCKET_REGION",
		"AWS_ACCESS_KEY_ID",
		"AWS_SECRET_ACCESS_KEY",
		"FRONTEND_URL",
		"PORT",
		"NEXT_PUBLIC_ENVIRONMENT",
		"NEXT_PUBLIC_API_KEY",
		"BACKEND_URL",
		"HOST_NAME"
	]
}
